<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="io.mashin.oep.feature"
      label="Oozie Eclipse Plugin"
      version="0.3.0.qualifier"
      provider-name="mashin"
      plugin="io.mashin.oep">

   <description url="http://oep.mashin.io">
      An Eclipse plugin for editing Apache Oozie workflows.
   </description>

   <copyright url="http://oep.mashin.io/copyright">
      http://oep.mashin.io/copyright
   </copyright>

   <license url="http://oep.mashin.io/license">
      http://oep.mashin.io/license
   </license>

   <url>
      <update label="Oozie Eclipse Plugin - Update Site" url="http://oep.mashin.io/update-site"/>
      <discovery label="Graphical Editing Framework (GEF)" url="http://download.eclipse.org/tools/gef/updates/releases/"/>
   </url>

   <requires>
      <import plugin="org.eclipse.gef" version="3.10.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources" version="3.9.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.views" version="3.7.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.ide" version="3.10.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.filesystem" version="1.4.100" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="io.mashin.oep"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
